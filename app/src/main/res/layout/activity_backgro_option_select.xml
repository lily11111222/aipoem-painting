<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackgroOptionSelectActivity"
    android:orientation="vertical"
    android:background="@drawable/interface1">
    <include
        layout="@layout/toolbar"
        android:layout_height="30dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="200dp"
        android:background="@color/not_so_transparent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_back_db"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/back_option"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/option_db"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="素材库/本地"
                android:gravity="center"
                android:fontFamily="@font/kaiti"
                android:textColor="@color/shallow_grey"
                android:textStyle="bold"
                android:textSize="@dimen/poem_title_size"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/ll_back_ai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/back_option"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/option_ai"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="使用AI生成"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/kaiti"
                android:textColor="@color/shallow_grey"
                android:textSize="@dimen/poem_title_size"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>