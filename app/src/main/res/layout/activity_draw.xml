<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interface2"
    android:orientation="vertical"
    tools:context=".DrawingActivity">
    <include
        layout="@layout/toolbar"
        android:layout_height="30dp"
        android:layout_width="match_parent" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:background="@color/not_so_transparent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_save"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/button2_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/kaiti"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="13dp"
            android:text="保存"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TableLayout
                        android:id="@+id/selectColorBox"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:gravity="center">

                        <TableRow>

                            <ImageButton
                                android:id="@+id/blackBtn"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/color_select"
                                android:src="@color/black" />

                            <ImageButton
                                android:id="@+id/shallowBlueBtn"
                                android:background="@drawable/color_select"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@color/shallow_blue" />
                            <ImageButton
                                android:id="@+id/redBtn"
                                android:background="@drawable/color_select"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@color/shallow_red" />
                        </TableRow>

                        <TableRow>
                            <ImageButton
                                android:id="@+id/shallowPinkBtn"
                                android:background="@drawable/color_select"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@color/shallow_pink" />
                            <ImageButton
                                android:id="@+id/greenBtn"
                                android:background="@drawable/color_select"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@color/bright_green" />

                            <ImageButton
                                android:id="@+id/BroneBtn"
                                android:background="@drawable/color_select"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@color/brone" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/paint"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/paint" />

                    <ImageButton
                        android:id="@+id/fillPaint"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/brush" />
                    <!--            <ImageButton-->
                    <!--                android:id="@+id/rubber"-->
                    <!--                android:layout_width="32dp"-->
                    <!--                android:layout_height="32dp"-->
                    <!--                android:scaleType="centerInside"-->
                    <!--                android:layout_marginLeft="8dp"-->
                    <!--                android:background="@drawable/shape_selector"-->
                    <!--                android:src="@drawable/rubber" />-->

                    <ImageButton
                        android:id="@+id/rect"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:focusable="true"
                        android:src="@drawable/rect" />

                    <ImageButton
                        android:id="@+id/circle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/elliptic"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/elliptic" />

                    <ImageButton
                        android:id="@+id/triangle"
                        android:layout_width="38dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/triangle" />
                    <ImageButton
                        android:id="@+id/equilateralTriangle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/equilateral_triangle" />
                    <ImageButton
                        android:id="@+id/rightAngle"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/plan" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/triangleTower"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/tower" />
                    <ImageButton
                        android:id="@+id/clear"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_selector"
                        android:src="@drawable/clear" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_animate"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button3_selector"
                    android:text="添加动作"
                    android:fontFamily="@font/kaiti"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="3"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scroll"
                    >

                    <com.example.poemheavenjava.views.DrawingBoardView
                        android:id="@+id/drawView"
                        android:layout_width="500dp"
                        android:layout_height="300dp"
                        android:layout_centerInParent="true"
                        android:background="@color/bord_color" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>

</LinearLayout>
