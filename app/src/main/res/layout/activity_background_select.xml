<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".BackgroundSelectActivity"
    android:background="@drawable/interface2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_height="30dp"
            android:layout_width="match_parent" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@color/not_so_transparent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_local_upload"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="本地图片"
                        android:background="@drawable/button2_selector"
                        android:drawableLeft="@drawable/local_upload_icon"
                        android:layout_gravity="center"
                        android:fontFamily="@font/kaiti"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="13dp"/>
                    <Button
                        android:id="@+id/btn_hand_draw"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="手绘背景"
                        android:background="@drawable/button3_selector"
                        android:drawableLeft="@drawable/draw_icon"
                        android:layout_gravity="center"
                        android:fontFamily="@font/kaiti"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="13dp"/>
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_bgs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp">
                            <ImageButton
                                android:id="@+id/bg_1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/item_height"
                                android:scaleType="fitXY"
                                android:src="@drawable/bg2"
                                tools:ignore="SpeakableTextPresentCheck"
                                android:background="@color/not_so_transparent"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp">
                            <ImageButton
                                android:id="@+id/bg_2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/item_height"
                                android:scaleType="fitXY"
                                android:src="@drawable/bg3"
                                tools:ignore="SpeakableTextPresentCheck"
                                android:background="@color/not_so_transparent"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp" >
                            <ImageButton
                                android:id="@+id/bg_3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/item_height"
                                android:scaleType="fitXY"
                                android:src="@drawable/bg4"
                                tools:ignore="SpeakableTextPresentCheck"
                                android:background="@color/not_so_transparent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="3">
                <Button
                    android:id="@+id/btn_tip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/tip"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/scroll"
                        >

                        <ImageView
                            android:id="@+id/bg"
                            android:layout_width="@dimen/bg_width"
                            android:layout_height="@dimen/bg_height"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </GridLayout>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:menu="@menu/nav_drawer_menu"
        android:background="#ffffff"
        />


</androidx.drawerlayout.widget.DrawerLayout>
